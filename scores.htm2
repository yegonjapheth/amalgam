<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Scores - School Management System</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='styles.css') }}">
    <script>
        function confirmDelete(event) {
            if (!confirm('Are you sure you want to delete this score?')) {
                event.preventDefault();
            }
        }
    </script>
    <style>
	footer {
	    position: fixed;
	}
    </style>
</head>
<body>
    <header>
        <h1>Scores</h1>
        <nav>
	    <a href="{{ url_for('index') }}">Home</a>
            <a href="{{ url_for('teachers') }}">Teachers</a>
            <a href="{{ url_for('students') }}">Learners</a>
            <a href="{{ url_for('exams') }}">Exams</a>
            <a href="{{ url_for('results') }}">Results</a>
            <a href="{{ url_for('parents') }}">Parents</a>
	    <a href="{{ url_for('register') }}">Register</a>
	    <a href="{{ url_for('login') }}">Login</a>
            <a href="{{ url_for('logout') }}">Logout</a>
        </nav>
    </header>
    <main>
<br>
<a href="{{ url_for('add_score') }}">Add Scores</a>
<br><br>
<div>
        <table id="c">
            <thead>
                <tr>
		    <th>S/No</th>
                    <th>Learner</th>
                    <th>Exam</th>
                    <th>Score</th>
		    <th colspan="2">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for score in results %}
    <tr>
        <td>{{ score.id }}</td>
        <td>{{ score.value }}</td>  <!-- Assuming 'value' is an attribute of the Score model -->
        <td><a href="{{ url_for('edit_score', score_id=score.id) }}">Edit</a></td>
    </tr>
{% endfor %}

            </tbody>
        </table>
</div>
    </main>
    <footer>
        <p>&copy; 2024 School Management System</p>
    </footer>
</body>
</html>
